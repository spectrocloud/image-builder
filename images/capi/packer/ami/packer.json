    },
    {
      "name": "centos-7",
      "type": "amazon-ebs",
      "instance_type": "t3.small",
      "source_ami": "{{user `centos_7_ami`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "CentOS Linux 7 x86_64 HVM EBS ENA*",
          "root-device-type": "ebs",
          "architecture": "x86_64"
        },
        "owners": ["410186602215"],
        "most_recent": true
      },
